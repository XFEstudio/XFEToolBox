<Window x:Class="XFEToolBox.Views.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XFEToolBox.Views.Windows"
        mc:Ignorable="d"
        Title="PopupWindow" ShowInTaskbar="False" Height="100" Width="200" Background="Transparent" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterOwner">
    <Window.Effect>
        <DropShadowEffect BlurRadius="3" ShadowDepth="3" Direction="-45"/>
    </Window.Effect>
    <Border CornerRadius="10" BorderThickness="2" BorderBrush="#5b5be7" Background="White">
        
    </Border>
</Window>
